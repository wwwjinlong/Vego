<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ebcs.database.mybatis.dao.PortraitManagerMapper" >
  <resultMap id="BaseResultMap" type="ebcs.database.bean.Portrait" >
    <id column="ID" property="id" jdbcType="NUMERIC" />
    <result column="CUST_ID" property="custId" jdbcType="VARCHAR" />
    <result column="PORTRAIT_URL" property="portraitUrl" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    ID, CUST_ID, PORTRAIT_URL
  </sql>
  <select id="selectByCustId" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from D_PORTRAIT
    where CUST_ID = #{CUST_ID,jdbcType=VARCHAR}
  </select>
  <insert id="insert" parameterType="ebcs.database.bean.Portrait" >
    insert into D_PORTRAIT (ID, CUST_ID, PORTRAIT_URL)
    values (seq_portrait.nextval, #{custId,jdbcType=VARCHAR}, #{portraitUrl,jdbcType=VARCHAR})
  </insert>
  <update id="updateByPrimaryKey" parameterType="ebcs.database.bean.Portrait" >
    update D_PORTRAIT
    <set >
      <if test="custId != null" >
        CUST_ID = #{custId,jdbcType=VARCHAR},
      </if>
      <if test="portraitUrl != null" >
        PORTRAIT_URL = #{portraitUrl,jdbcType=VARCHAR},
      </if>
      </set>
    where ID = #{id,jdbcType=NUMERIC}
  </update>
</mapper>